{
    "coc.preferences.formatOnSaveFiletypes": [
        "java",
        "xml",
        "rust",
        "javascript",
        "json",
        "scala"
    ],
    "coc.preferences.formatOnTypeFiletypes": [
        "java",
        "scala"
    ],
    "languageserver": {
        "ocaml-lsp": {
            "command": "opam",
            "args": [
                "config",
                "exec",
                "--",
                "ocamllsp"
            ],
            "filetypes": [
                "ocaml",
                "reason"
            ]
        }
    }
}
